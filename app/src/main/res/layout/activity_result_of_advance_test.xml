<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultOfAdvanceTestActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/mainblue"
                android:foregroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteY="699dp" />

            <TextView
                android:id="@+id/toptextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/resultoftest"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/topbar"
                app:layout_constraintEnd_toEndOf="@+id/topbar"
                app:layout_constraintStart_toStartOf="@+id/topbar"
                app:layout_constraintTop_toTopOf="@+id/topbar"
                tools:ignore="TextContrastCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/resulttext1"
                    style="@style/Widget.Material3.MaterialTimePicker.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="false"
                    android:text="@string/res101morespace"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorLink="@color/palerblue"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/assessmenticon"
                    app:iconGravity="top"
                    app:iconSize="100dp"
                    app:iconTint="@color/mainblue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.4"
                    app:strokeColor="@color/mainblue"
                    app:strokeWidth="2dp"
                    tools:ignore="VisualLintButtonSize" />

                <View
                    android:id="@+id/midline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:foregroundGravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/resultofresult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="192dp"
                    android:text="@string/lowriskresult"
                    android:textColor="@color/metallicBlue"
                    android:textSize="38sp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_result_21"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/midline"
                    app:layout_constraintVertical_bias="0.575" />

                <TextView
                    android:id="@+id/txt_result_21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_result_22"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/markresult_21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/markicon"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_result_21"
                    app:layout_constraintStart_toEndOf="@id/txt_result_21"
                    app:layout_constraintTop_toTopOf="@id/txt_result_21"/>

                <TextView
                    android:id="@+id/txt_result_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_result_23"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/markresult_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/markicon"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_result_22"
                    app:layout_constraintStart_toEndOf="@id/txt_result_22"
                    app:layout_constraintTop_toTopOf="@id/txt_result_22"/>

                <TextView
                    android:id="@+id/txt_result_23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/markresult_23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/markicon"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_result_23"
                    app:layout_constraintStart_toEndOf="@id/txt_result_23"
                    app:layout_constraintTop_toTopOf="@id/txt_result_23"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_next_2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20sp"
                android:backgroundTint="@color/mainblue"
                android:text="@string/btngonextpage"
                android:textAlignment="center"
                android:textColorLink="@color/white"
                android:textScaleX="1.15"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="18dp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>